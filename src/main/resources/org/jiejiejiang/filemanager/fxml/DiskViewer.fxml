<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jiejiejiang.filemanager.gui.controller.DiskViewerController">
   <top>
      <VBox spacing="10" style="-fx-padding: 10;">
         <Label text="磁盘块查看器" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="磁盘使用率:" />
            <ProgressBar fx:id="diskUsageProgressBar" prefWidth="200" />
            <Label fx:id="diskUsageLabel" text="0%" />
         </HBox>
      </VBox>
   </top>
   
   <center>
      <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">
         <!-- 左侧：磁盘块列表 -->
         <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="磁盘块列表" style="-fx-font-weight: bold;" />
            <TableView fx:id="blockTableView" prefHeight="400">
               <columns>
                  <TableColumn fx:id="blockIdColumn" text="块ID" prefWidth="60" />
                  <TableColumn fx:id="blockStatusColumn" text="状态" prefWidth="80" />
                  <TableColumn fx:id="blockSizeColumn" text="大小" prefWidth="80" />
                  <TableColumn fx:id="blockContentColumn" text="内容预览" prefWidth="120" />
               </columns>
            </TableView>
         </VBox>
         
         <!-- 右侧：字节详细视图 -->
         <VBox spacing="5" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="块详细信息" style="-fx-font-weight: bold;" />
               <Label fx:id="selectedBlockLabel" text="未选择" />
            </HBox>
            
            <!-- 字节十六进制视图 -->
            <VBox spacing="5">
               <Label text="十六进制视图:" />
               <TextArea fx:id="hexTextArea" prefHeight="200" editable="false" 
                        style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 12px;" />
            </VBox>
            
            <!-- 字节ASCII视图 -->
            <VBox spacing="5">
               <Label text="ASCII视图:" />
               <TextArea fx:id="asciiTextArea" prefHeight="150" editable="false" 
                        style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 12px;" />
            </VBox>
            
            <!-- 块统计信息 -->
            <VBox spacing="5">
               <Label text="统计信息:" />
               <GridPane hgap="10" vgap="5">
                  <Label text="总块数:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="totalBlocksLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="已使用:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="usedBlocksLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="空闲:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label fx:id="freeBlocksLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="坏块:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Label fx:id="badBlocksLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </GridPane>
            </VBox>
         </VBox>
      </SplitPane>
   </center>
   
   <bottom>
      <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
         <Button fx:id="refreshButton" text="刷新" />
         <Button fx:id="closeButton" text="关闭" />
      </HBox>
   </bottom>
</BorderPane>